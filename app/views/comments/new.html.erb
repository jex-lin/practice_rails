<h1>New Comment</h1>
<div>
  <%= form_for @comment, :url => post_comments_path(@post) do |f| %>
    <div><label>Commenter</label><%= f.text_field :commenter %></div>
    <div><label>Body</label><%= f.text_field :body %></div>
    <%= f.submit "Submit" %>
  <% end %>
  <%= link_to 'Back', post_comments_path %>
</div>
