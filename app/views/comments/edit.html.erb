<h1>Editing Comment</h1>

<%= form_for @comment, :url => post_comment_path(@post, @comment) do |f| %>
  <div>
    <%= f.label :commenter %> <br>
    <%= f.text_field :commenter %>
  </div>
  <div>
    <%= f.label :body %> <br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
<%= link_to 'Show', post_comment_path(@post, @comment) %> |
<%= link_to 'Back', post_comments_path(@post) %>
