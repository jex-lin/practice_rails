<h1>Post</h1>
<div><%= link_to("new post", new_post_path) %></div>
<table>
  <thead>
    <tr>
      <td> # </td>
      <td> name </td>
      <td> title </td>
      <td> content </td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td> # </td>
      <td> <%= link_to(post.name, post_path(post)) %> </td>
      <td> <%= post.title %> </td>
      <td>
        <%= link_to("Edit", edit_post_path(post)) %>
        <%= link_to("Delete", post_path(post), :method => :delete, :confirm => "Are you sure?" ) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

