<h1>New Post</h1>
<div>
  <%= form_for @post, :url => posts_path(@post) do |f| %>
    <div><%= f.label :name %> : <%= f.text_field :name, :placeholder => '3~12 characters'%><%= @post.errors.full_messages_for(:name).first %></div>
    <div><%= f.label :title %> : <%= f.text_field :title, :placeholder => 'At least 5 characters' %><%= @post.errors.full_messages_for(:title).first %></div>
    <div><%= f.label :content %> : <%= f.text_field :content %><%= @post.errors.full_messages_for(:content).first %></div>
    <%= f.submit "Submit", :disable_with => 'Submiting...' %>
  <% end %>
  <%= link_to 'Back', posts_path %>
</div>
<p>全部錯誤訊息 :</p>
<ul>
  <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<p>全部錯誤訊息的第一個 :</p>
<%= @post.errors.full_messages.first if @post.errors.any? %>
