<h1>New Post</h1>
<div>
  <%= form_for @post, :url => posts_path(@post) do |f| %>
    <div><label>Name</label><%= f.text_field :name %></div>
    <div><label>Title</label><%= f.text_field :title %></div>
    <div><label>Content</label><%= f.text_field :content %></div>
    <%= f.submit "Submit", :disable_with => 'Submiting...' %>
  <% end %>
  <%= link_to 'Back', posts_path %>
</div>
